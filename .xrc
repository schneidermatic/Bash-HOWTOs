##===============================================
## CONFIG
##===============================================
set -o vi
CWD=`pwd`
export APPRC_FILE=".apprc"
export APPRC_PATH=$HOME/$APPRC_FILE

## SOURCE PROJECT ENV ---------------------------
if [ -e $APPRC_PATH ]
then
  . $APPRC_PATH
else
  cp $CWD/$APPRC_FILE $HOME
fi

if [ -z "$PROJECT_HOME" ]
then
  echo "Please set \$PROJECT_HOME in '$APPRC_PATH' file !!!"
  echo "... and source the '.xrc' file again."
fi

##===============================================
## CLI SHORTHAND FUNCTIONS
##===============================================
x_run() {
  $PROJECT_HOME/app.sh "$@"
}

#################################################
#################################################
#####  ---  LIST SHORTHAND FUNCTIONS ---    #####
#################################################
#################################################
x_ls() {
  echo "FUNCTIONS"
  echo "========="
  declare -F | grep "x_" | sed -E 's/declare -f //'
}
