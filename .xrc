##===============================================
## CONFIG
##===============================================
CWD=`pwd`
CONFRC=$HOME/.confrc

## SOURCE PROJECT ENV ---------------------------
if [ -e $CONFRC ]
then
  . $CONFRC
else
  cp $CWD/.confrc $CONFRC
fi

if [ -z "$PROJECT_HOME" ]
then
  echo "Please set \$PROJECT_HOME in '$CONFRC' file !!!"
else
  . $CONFRC
fi

##===============================================
## CLI SHORTHANDS
##===============================================
x_run() {
  $PROJECT_HOME/app.sh "$@"
}

#################################################
#################################################
#####       ---  LIST SHORTHANDS  ---       #####
#################################################
#################################################
x_ls() {
  echo "SHORTHANDS"
  echo "=========="
  declare -F | grep "x_" | sed -E 's/declare -f //'
}
